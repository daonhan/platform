{
    "$schema": "http://json-schema.org/schema",
    "id": "NxRealm",
    "title": "",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use?"
        },
        "appName": {
            "type": "string",
            "description": "",
            "$default": {
                "$source": "argv",
                "index": 1
            },
            "x-prompt": "What is your realm application name? (if different than project name)"
        },
        "appId": {
            "type": "string",
            "description": "",
            "$default": {
                "$source": "argv",
                "index": 2
            },
            "x-prompt": "What is your Realm App ID?"
        },
        "deploymentModel": {
            "type": "string",
            "description": "",
            "$default": {
                "$source": "argv",
                "index": 3
            },
            "x-prompt": "What deployment model do you want to use?",
            "enum": ["LOCAL", "GLOBAL"]
        },
        "cloudRegion": {
            "type": "string",
            "description": "",
            "$default": {
                "$source": "argv",
                "index": 4
            },
            "x-prompt": "What cloud region is your application deployed in?"
        },
        "tags": {
            "type": "string",
            "description": "Add tags to the project (used for linting)",
            "alias": "t"
        },
        "directory": {
            "type": "string",
            "description": "A directory where the project is placed",
            "alias": "d"
        },
        "skipFormat": {
            "type": "string",
            "description": "",
            "default": false
        }
    },
    "required": ["name"]
}
